
// *************************************
//
//   Off Canvas
//   -> Shared logic between both the off-canvas nav and the
//   -> off-canvas box-manager
//
// *************************************

$width-off-canvas:      275px

// ----- Off-Canvas ----- //

// The following styles reflect both the off-
// canvas nav to the left as well as the off-
// canvas box manager to the right.

.off-canvas
  background: $color-off-canvas-bg
  width: $width-off-canvas
  z-index: $z-off-canvas
  color: white
  overflow-x: hidden
  position: fixed
  top: 0
  height: 100%
  -webkit-overflow-scrolling: touch
  overflow-y: scroll
  transition: all 300ms cubic-bezier(0.215, 0.610, 0.355, 1.000)

  &.box-manager
    right: 0

  &.nav
    left: 0


// ----- Main Content Wrapper ----- //

//  These are what's shifted to the left/right
//  when the nav/box-manager are shown.

main.wrapper, .application-header
  transition: transform 300ms cubic-bezier(0.215, 0.610, 0.355, 1.000)

  .off-canvas-nav-active &
    transform: translate3d( $width-off-canvas, 0, 0 )

  .off-canvas-box-manager-active &
    transform: translate3d( -$width-off-canvas, 0, 0 )


// ----- Off-Canvas Active States ----- //

// This **could** be refactored, but coded
// this way to compensate for inconsistencies
// where the browser would cease to scroll.
// - BG

.off-canvas-nav-active
  .off-canvas.box-manager.tuck-away
    transform: translate3d( $width-off-canvas, 0, 0 )

.off-canvas-box-manager-active
  .off-canvas.nav.tuck-away
    transform: translate3d( -$width-off-canvas, 0, 0 )
