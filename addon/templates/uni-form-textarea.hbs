
{{!-- partial 'uni-form-label-and-message' --}}

{{#if label }}
  <span class="label" data-text="{{ label }}">{{ label }}</span>
{{/if}}

{{#if message }}
  <span class="{{ message.tone }} message" data-text="{{ message.body }}">{{ message.body }}</span>
{{/if}}

{{ textarea
  autofocus=autofocus
  disabled=disabled
  maxlength=maxlength
  name=name
  placeholder=placeholder
  tabindex=tabindex
  value=inputValue
}}

{{ yield }}
