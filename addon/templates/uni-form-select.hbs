
{{#if label }}
  <span class="label">{{ label }}</span>
{{/if}}

{{#if message }}
  <span class="{{ message.tone }} message">{{ message.body }}</span>
{{/if}}

{{ uni-form-select-tag
  autofocus=autofocus
  content=content
  disabled=disabled
  name=name
  prompt=prompt
  value=value
}}

{{ yield }}
