
<div data-option-list>

  {{ yield }}

  {{!-- This is the selection --}}
  <div data-option data-selection={{selectedOption.value}}>
    {{ selectedOption.displayName }}
    {{ app-icon name='arrow-down' }}
  </div>

  {{!-- These are the options --}}
  {{#each options as |option| }}
    <div data-option value={{option.value}}>
      {{ option.displayName }}
    </div>
  {{/each}}

</div>

{{!-- The Overlay, which will be moved to top of page's stacking context. --}}
<div class="select-dropdown-overlay {{if active 'shown'}}"></div>
